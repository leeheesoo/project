@using KinderJoy.Site.Infrastructure
@{
    ViewBag.Title = "킨더조이 관리자 : 2016 닌자바비 이벤트";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/Admin/admin-ninjabarbie-2016.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row" ng-app="statistics" ng-controller="List">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-video-camera fa-fw"></i> @ViewBag.Title
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div class="row" style="padding-bottom:10px">
                        <div class="col-xs-6">
                            전체 <span style="color:red">{{  data.totalItemCount }}</span>건
                            <a class="btn btn-primary" href="@Url.Action("StatisticsExcelDownload", "AdminNinjaBarbie2016")"><i class="fa fa-download"></i> 엑셀다운로드</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover table-condensed" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">연락처</th>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">이름</th>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">나이</th>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">주소</th>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">상세주소</th>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">우편번호</th>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">선택장난감</th>
                                            <th rowspan="2" style="text-align:center;vertical-align:middle;">총 공유수</th>
                                            <th colspan="3" style="text-align:center;vertical-align:middle;">SNS 별 공유수</th>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center;vertical-align:middle">페이스북</th>
                                            <th style="text-align:center;vertical-align:middle;">카카오톡</th>
                                            <th style="text-align:center;vertical-align:middle;">카카오스토리</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in data.items">
                                            <td class="vert-middle text-center">{{ item.mobile }}</td>
                                            <td class="vert-middle text-center">{{ item.name }}</td>
                                            <td class="vert-middle text-center">{{ item.age }}</td>
                                            <td class="vert-middle text-center">{{ item.address }}</td>
                                            <td class="vert-middle text-center">{{ item.addressDetail }}</td>
                                            <td class="vert-middle text-center">{{ item.zipCode }}</td>
                                            <td class="vert-middle text-center">{{ item.surprizeTypeDisplayName }}</td>
                                            <td class="vert-middle text-center">{{ item.totalCount }}</td>
                                            <td class="vert-middle text-center">{{ item.facebookCount }}</td>
                                            <td class="vert-middle text-center">{{ item.kakaotalkCount }}</td>
                                            <td class="vert-middle text-center">{{ item.kakaostoryCount }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <nav class="text-center">
                                <a href="#" ng-show="!data.isFirstPage" ng-click="goToPage(1)">처음</a>
                                <a href="#" ng-show="data.hasPreviousPage" ng-click="goToPage(data.pageNumber - 1)">이전</a>
                                <a href="#" ng-repeat="page in data.pageNumber | pages:data.pageCount" ng-click="goToPage(page)"> {{ page }} </a>
                                <a href="#" ng-show="data.hasNextPage" ng-click="goToPage(data.pageNumber + 1)">다음</a>
                                <a href="#" ng-show="!data.isLastPage" ng-click="goToPage(data.pageCount)">마지막</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


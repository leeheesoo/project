@using PagedList.Mvc;
@model IEnumerable<KinderJoy.Site.Models.Admin.WordEvent.WordStats>
@{
    ViewBag.Title = "통계";
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var action = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-12">
                <div class="btn-group">
                    <a class="btn btn-default @(action.Equals("Index") ? "active" : "")" href="@Url.Action("Index", "AdminWordEvent")">응모자</a>
                    <a class="btn btn-default @(action.Equals("Share") ? "active" : "")" href="@Url.Action("Share", "AdminWordEvent")">공유</a>
                    <a class="btn btn-default @(action.Equals("Stats") ? "active" : "")" href="@Url.Action("Stats", "AdminWordEvent")">통계</a>
                    <a class="btn btn-default @(action.Equals("Winners") ? "active" : "")" href="@Url.Action("Winners", "AdminWordEvent")">당첨자</a>
                    <a class="btn btn-default @(action.Equals("WinnersList") ? "active" : "")" href="@Url.Action("WinnersList", "AdminWordEvent")">당첨자업로드</a>
                </div>
            </div>
        </div>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>응모일</th>
                    <th>응모수</th>
                    <th>순응모(휴대폰번호기준)</th>
                    <th>페북공유(Web)</th>
                    <th>트윝공유(Web)</th>
                    <th>카스공유(Web)</th>
                    <th>페북공유(Mobile)</th>
                    <th>트윝공유(Mobile)</th>
                    <th>카스공유(Mobile)</th>
                    <th>카톡공유</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var board in Model) {
                    <tr>
                        <td class="vertical-middle">@board.Date</td>
                        <td class="vertical-middle">@board.Count</td>
                        <td class="vertical-middle">@board.DistinctCount</td>
                        <td class="vertical-middle">@board.FacebookCount</td>
                        <td class="vertical-middle">@board.TwitterCount</td>
                        <td class="vertical-middle">@board.KakaostoryCount</td>
                        <td class="vertical-middle">@board.FacebookMobileCount</td>
                        <td class="vertical-middle">@board.TwitterMobileCount</td>
                        <td class="vertical-middle">@board.KakaostoryMobileCount</td>
                        <td class="vertical-middle">@board.KakaotalkCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    // This code loads the IFrame Player API code asynchronously.
    var tag = document.createElement('script');
    tag.src = "//www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    var popAutoPlayMode = false; //  열리면서 시작하는 모드

       var popP;
    //var onReady = false;
    //팝업 영상
       function onYouTubeIframeAPIReady() {
           popP = new YT.Player('popPlayer', {
               height: 315,
               width: 560,
               videoId: 'oSnF1HD3ZyU',
               playerVars: {
                   controls: 0,
                   rel: 0,
                   showinfo: 0,
                   playsinline: 1 //ios에서 영상 전체화면 여부 - 0 : 전체화면
               },
               events: {
                   'onReady': fnPlay,
                   'onStateChange': fnReplay
               }
           });
        // 이벤트 메인 영상
           eventPlayer = new YT.Player('eventPlayer', {
               videoId: 'bejdeX95Pu0',
               playerVars: {
                   controls: 1,
                   rel: 0,
                   showinfo: 0,
                   playsinline: 1
               },
               events: {
                   'onReady': function (event) {
                       event.target.setPlaybackQuality('hd1080');
                   }
               }

           });

       }


       function fnPlay(e) {

           fnPlayOption();
       }

       function fnPlayOption() {
           if (popAutoPlayMode) popP.playVideo();
       }

       function fnReplay(e) {


           if (e.data == YT.PlayerState.PLAYING) {
               setTimeout(function () {
                   $('.popup .btn-right').show();
               }, 3000);
           }

           if (e.data === YT.PlayerState.ENDED) {
               $('.popup .btn-right').show();
               setTimeout(function () {
                   pororo2018Model.createInstantLottery();
               },500);
           }
       }
</script>
@model KinderJoy.Site.Models.Admin.AdminUserEditModel
@{
    ViewBag.Title = "계정 관리 > 추가";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="panel-heading">
                    <h4></h4>
                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
                {
                <!-- /.panel-body -->
                <div class="panel-body">
                    <div class="table-responsive">
                             <div class="table-responsive">
                            <table class="table table-bordered" id="" style="width:100%">    
                                <tr>
                                    <th class="text-center" style="vertical-align:middle; width:80px">닉네임</th><td>@(Html.TextBoxFor(m=>m.UserName ,new{@class = "form-control"})) </td>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">비밀번호</th><td>@(Html.PasswordFor(m=>m.Password ,new{@class = "form-control"})) </td>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">이메일</th><td>@(Html.TextBoxFor(m=>m.Email ,new{@class = "form-control"})) </td>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">전화번호</th><td>@(Html.TextBoxFor(m=>m.PhoneNumber ,new{@class = "form-control"})) </td>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">역할</th>
                                    <td>
                                        @foreach (var role in Model.Roles)
                                        {
                                            <label>
                                                <input type="checkbox" value="@role.Name" name="selectRoles" />
                                                @role.Name
                                            </label>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="text-right">                        
                        <button type="submit" class="btn btn-primary">저장</button>
                        <a href='@Url.Action("Index")' class="btn btn-default">취소</a>
                        </div>
                    </div>
                </div>
                }
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>


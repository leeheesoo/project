@{
    ViewBag.Title = "[도리를찾아서 이벤트] SNS공유";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row" ng-app="app-admin-findingdory" ng-controller="ctrl-admin-findingdory-sns">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-video-camera fa-fw"></i> @ViewBag.Title
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div class="row" style="padding-bottom:10px">
                        <div class="col-xs-6">
                            전체 <span style="color:red">{{ data.totalItemCount }}</span>건
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover table-condensed" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th class="vert-middle text-center" rowspan="2">No.</th>
                                            <th class="vert-middle text-center" rowspan="2">공유일</th>
                                            <th class="vert-middle text-center" rowspan="2">디바이스</th>
                                            <th class="vert-middle text-center" rowspan="2">IP</th>
                                            <th class="vert-middle text-center" rowspan="2">이름</th>
                                            <th class="vert-middle text-center" rowspan="2">연락처</th>
                                            <th class="vert-middle text-center" rowspan="2">나이</th>
                                            <th class="vert-middle text-center" colspan="4">SNS정보</th>
                                            <th class="vert-middle text-center" rowspan="2">관리</th>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center;vertical-align:middle">유형</th>
                                            <th style="text-align:center;vertical-align:middle;">아이디</th>
                                            <th style="text-align:center;vertical-align:middle;">닉네임</th>
                                            <th style="text-align:center;vertical-align:middle;">스크랩URL</th>
                                        </tr>
                                        <tr>
                                            <th class="vert-middle text-center"></th>
                                            <th class="vert-middle text-center">
                                                <div class="row">
                                                    <div class="col-xs-6" style="padding-right:3px;">@Html.TextBox("fromDate", "", new { @ng_model = "snsFilter.fromDate", @class = "form-control input-sm datepicker", placeholder = "시작" })</div>
                                                    <div class="col-xs-6" style="padding-left:3px;">@Html.TextBox("toDate", "", new { @ng_model = "snsFilter.toDate", @class = "form-control input-sm datepicker", placeholder = "종료" })</div>
                                                </div>
                                            </th>
                                            <th class="vert-middle text-center">@Html.DropDownList("channel", new SelectList(new string[] { "PC", "Mobile" }), "전체", new { @ng_model = "snsFilter.channel", @class = "form-control" }) </th>
                                            <th class="vert-middle text-center"></th>
                                            <th class="vert-middle text-center">@Html.TextBox("name", "", new { @ng_model = "snsFilter.name", @class = "form-control" })</th>
                                            <th class="vert-middle text-center">@Html.TextBox("mobile", "", new { @ng_model = "snsFilter.mobile", @class = "form-control" })</th>
                                            <th class="vert-middle text-center"></th>
                                            <th class="vert-middle text-center">
                                                @Html.DropDownList("snsType", new List<SelectListItem>() {
                                                                               new SelectListItem { Text = "페이스북", Value = KinderJoy.Domain.Abstract.SnsType.Facebook.ToString("D") },
                                                                               new SelectListItem { Text = "카카오톡", Value = KinderJoy.Domain.Abstract.SnsType.Kakaotalk.ToString("D") },
                                                                               new SelectListItem { Text = "카카오스토리", Value = KinderJoy.Domain.Abstract.SnsType.Kakaostory.ToString("D") }
                                                                           }, "전체", new { @ng_model = "snsFilter.snsType", @class = "form-control" })
                                            </th>
                                            <th class="vert-middle text-center"></th>
                                            <th class="vert-middle text-center"></th>
                                            <th class="vert-middle text-center"></th>
                                            <th class="vert-middle text-center">
                                                <button type="button" class="btn btn-info btn-block btn-xs" ng-click="goToPage(1)"><i class="fa fa-search fa-fw"></i>검색</button>
                                                <button type="button" class="btn btn-primary btn-xs" ng-click="excelDownload()"><i class="fa fa-download fa-fw"></i>엑셀다운로드</button>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="item in data.items">
                                            <td class="vert-middle text-center">{{ item.id }}</td>
                                            <td class="vert-middle text-center">{{ item.createDate | date : 'yyyy-MM-dd HH:mm:ss' }}</td>
                                            <td class="vert-middle text-center">{{ item.user.channel }}</td>
                                            <td class="vert-middle text-center">{{ item.user.ipAddress }}</td>
                                            <td class="vert-middle text-center">{{ item.user.name }}</td>
                                            <td class="vert-middle text-center">{{ item.user.mobile }}</td>
                                            <td class="vert-middle text-center">{{ item.user.age }}</td>
                                            <td class="vert-middle text-center">{{ item.snsTypeDisplayName }}</td>
                                            <td class="vert-middle text-center">{{ item.snsId }}</td>
                                            <td class="vert-middle text-center">{{ item.snsName }}</td>
                                            <td class="vert-middle text-center">{{ item.post }}</td>
                                            <td class="vert-middle text-center"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div style="text-align:center">
                                <a href="#" ng-show="!data.isFirstPage" ng-click="goToPage(1)">처음</a>
                                <a href="#" ng-show="data.hasPreviousPage" ng-click="goToPage(data.pageNumber - 1)">이전</a>
                                <a href="#" ng-repeat="page in data.pageNumber | pages:data.pageCount" ng-click="goToPage(page)"> {{ page }} </a>
                                <a href="#" ng-show="data.hasNextPage" ng-click="goToPage(data.pageNumber + 1)">다음</a>
                                <a href="#" ng-show="!data.isLastPage" ng-click="goToPage(data.pageCount)">마지막</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@section scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/Admin/findingdory-2017.js"></script>
}


    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "상상하는즐거움";
    ViewBag.GaTitle = "상상하는즐거움";

    string trackingURLSNSFlag = Request.QueryString.Get("utm_medium");
    string trackingURLScrapFlag = Request.QueryString.Get("utm_content");

    ViewBag.ogTitle = "우리아이에게 필요한 서프라이즈는 무엇일까요?";
    ViewBag.ogDescription = "킨더조이 NEW 서프라이즈 출시!";
    ViewBag.ogImgae = "http://" + HttpContext.Current.Request["HTTP_HOST"] + "/Images/toy/thumbnail/facebook/facebook_boys.jpg";

    if (trackingURLSNSFlag != null && trackingURLScrapFlag != null)
    {
        if (trackingURLSNSFlag.Equals("facebook"))
        {
            ViewBag.ogSnsURL = "http://" + HttpContext.Current.Request["HTTP_HOST"] + "/ Image/Track/toyPage/facebook/" + trackingURLScrapFlag;
            ViewBag.ogImage = "http://" + HttpContext.Current.Request["HTTP_HOST"] + "/Images/toy/thumbnail/facebook/facebook_" + trackingURLScrapFlag + ".jpg";
        }
        else
        {
            ViewBag.ogSnsURL = "http://" + HttpContext.Current.Request["HTTP_HOST"] + "/Image/Track/toyPage/kakaostory/" + trackingURLScrapFlag;
            ViewBag.ogImage = "http://" + HttpContext.Current.Request["HTTP_HOST"] + "/Images/toy/thumbnail/kakaostory/kakaostory_" + trackingURLScrapFlag + ".jpg";
        }
    }
}

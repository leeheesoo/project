    <script type="text/javascript" src="~/Content/js/toy_motion.js"></script>
    <script type="text/javascript" src="~/Content/js/toy.page.js"></script>
    <script type="text/javascript" src="https://developers.kakao.com/sdk/js/kakao.min.js"></script>
    <script>
        // kakao api setting
        Kakao.init('@System.Configuration.ConfigurationManager.AppSettings["sns.kakao.key"]');

        // ==================================================
        // common setting
        // ==================================================
        function goPosition(to) {
            scrollReady = false;
            $("html, body").stop().animate(
				{ scrollTop: to },
				500,
				function () { scrollReady = true; }
			);
        }

        // ==================================================
        // func
        // ==================================================

        // 팝업 여닫기(외부에서 사용할수 있도록 함수 처리)
        function _openPop(flag) {
            var name = '.popup-' + flag;
            $(name).addClass('on');
            goPosition(0);
        }

        // 동영상 팝업
        function _openMov(param) {
            _openPop('mov');
            var hrefMov = $(param).attr("href");
            $('.mov_cont iframe').attr('src', hrefMov);

        }
        function _closeMov() {
            $('.mov_cont iframe').attr('src', '');

        }
    </script>
}




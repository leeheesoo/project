@model Samsonite.Mall.Models.AdminModels.AdminLoginModel
@{
    Layout = null;
    ViewBag.Title = "쌤소나이트 관리자 로그인";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1000, user-scalable=no, target-densitydpi=device-dpi">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome = 1">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    @Styles.Render("~/Content/commoncss")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/admincss")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="container">
    @using (Html.BeginForm("Login", "AdminHome", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" })) {
        <h2 class="form-signin-heading">쌤소나이트 관리자</h2>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", placeholder = "Email address" })
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    }

    </div> <!-- /container -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/bundles/adminjs")
    <script type="text/javascript">
        $.validator.setDefaults({
            onkeyup: false,
            onclick: false,
            onfocusout: false,
            showErrors: function (errorMap, errorList) {
                if (this.numberOfInvalids() && errorList != '') { // 에러가 있을 때만..
                    alert(errorList[0].message);
                    $(errorList[0].element).focus();
                }
            }
        });
        $(function () {
            if ('@TempData["message"]' != '') {
                alert('@TempData["message"]');
            }
        });
    </script>
</body>
</html>

   

            }
            $('#fcKMCform')[0].target = 'KMCISWindow';
            $('#fcKMCform')[0].action = 'https://www.kmcert.com/kmcis/web/kmcisReq.jsp';
            $('#fcKMCform')[0].submit();
        }
</script>
}
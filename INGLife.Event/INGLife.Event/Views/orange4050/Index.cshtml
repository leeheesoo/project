@model INGLife.Event.Models.OverFortyFiveDbModels.OverFortyFiveDbModels
@using INGLife.Event.Domain.Entities.KidsNote
@{
    ViewBag.Title = "ORANGELIFE 론칭 기념 이벤트";
    ViewBag.ViewPortWidth = 720;
}

@section styles {
	<link href="~/Content/orange4050/css/event.min.css" rel="stylesheet" />
	@Scripts.Render("~/bundles/vuejs")
}

@section metas{
	<meta property="og:title" content="4050도 갖고 싶은 카카오이모티콘!" />
	<meta property="og:description" content="선착순 2만명! 100%증정!단 2분 소요! 이벤트에 지금 참여하세요" />
	<meta property="og:image" content="@ViewBag.image" />
	<meta property="og:url" content="@ViewBag.url" />
}


<div class="wrap" id="orange4050-event">
	<div class="event-inner">

		<!--kv-->
		<section class="kv">
			<div class="a11y-hidden">
				<h1>ORANGE LIFE 리브랜딩 이벤트</h1>
				<h2>45세+ 라면 누구나 이모티콘이 콸콸콸</h2>
				<p>친구와 가족과 함께하는 즐거움! 오렌지라이프와 함께 <b>활기차고 생기있는 오렌지빛 인생을 즐겨보세요</b></p>
			</div>
		</section>

		<!--이모티콘 지급-->
		<section class="emoticon-step01">
			<div class="a11y-hidden">
				<h2>45세+ 힘내시라고 이모티콘 100%증정</h2>
				<dl>
					<dt>이벤트 참여기간</dt>
					<dd>18.9.10(월)~소진시</dd>

					<dt>이모티콘 지급일</dt>
					<dd>18.9.10(월)~13(목) 참여자 : 9.14(금 지급) / 18.9.13(월)~20(목) 참여자 : 9.21(금) 지급</dd>
				</dl>

				
			</div>
			<button type="button" class="btn btn-plus ga-event" data-action="플러스친구 추가" v-on:click="openPlusFriendPop();">플러스친구 추가</button>			
		</section>

		<section class="emoticon-step02">
			<div class="a11y-hidden">
				<h2>내 이모티콘은 내취향대로~ 얼씨구나!</h2>
				<p>내 취향대로 이모티콘을 선태해 주세요 마케팅 동의 후 선택 가능합니다.</p>
				<ul>
					<li>니들이 엄니맘을 알어?</li>
					<li>깨방정 요하</li>
					<li>어서와~이런덕담 처음이지?</li>
				</ul>
			</div>
			
			<button type="button" class="btn btn-marketing ga-event" v-on:click="openMarketingPop();" data-action="마케팅동의 진행">마케팅동의 진행</button>

			<ul class="a11y-hidden">
				<li>해당이벤트는 45세 이상부터 참여 가능합니다.(휴대폰인증 기준,1975년 이전 출생)</li>
				<li>이모티콘은 플러스 친구로 발송되오니, 플러스 친구맺기를 확인해주세요.</li>
			</ul>
		</section>

		<!--공유하기-->
		<section class="sns-share">
			<h2 class="a11y-hidden">이벤트 공유 친구야 너도 해봐!</h2>
			<div class="sns-btn-wrap">
				<button type="button" class="btn btn-share btn-kakao ga-event" v-on:click="shareKakao()" data-action="카카오톡 공유">카카오톡 공유하기</button>
				<button type="button" class="btn btn-share btn-naver ga-event" v-on:click="shareBand()" data-action="네이버밴드 공유">네이버 밴드 공유하기</button>
				<button type="button" class="btn btn-share btn-facebook ga-event" v-on:click="shareFacebook()" data-action="페이스북 공유">페이스북 공유하기</button>
			</div>
		</section>

		<!--유의사항-->
		<footer>
			<div class="a11y-hidden">
				<h2>이벤트 유의사항</h2>
				<ul>
					<li>오렌지라이프 플러스친구로 이모티콘 쿠폰을 발송드립니다.</li>
					<li>이모티콘 발송 시 플러스친구 등록 상태인 분만 수신이 가능합니다.</li>
					<li>이모티콘 쿠폰 발송일은 매주 금요일입니다.( ex. 9/10(월) ~ 9/13(목) 이벤트 참여 9/14(금) 발송)</li>
					<li>상기 이벤트는 조기 종료될 수 있습니다.</li>
					<li>이미 해당 아이템을 보유하고 계신 분은 재 다운로드가 되지 않습니다.</li>
					<li>이모티콘은 발급일로 부터 30일간 사용이 가능합니다.</li>
					<li>이벤트 관련 문의 : 1688-5718</li>
				</ul>
			</div>
		</footer>
	</div>

	@Html.Partial("_popup", Model)
</div>





@section scripts {
	<script src="~/Content/common/dev-common.js"></script>
	<script src="https://ssl.daumcdn.net/dmaps/map_js_init/postcode.v2.js"></script>
	<script src="//developers.kakao.com/sdk/js/kakao.min.js"></script>
	<script src="~/Content/js/orange4050/pub.js"></script>
	<script src="~/Content/js/orange4050/dev.js"></script>
	<script type="text/javascript">
		var googleAnalyticCategory = '@ViewBag.Title';
		var eventClose = '@ViewBag.IsClose';

		Kakao.init('1e6ffb62d13c4100e95f1adc540918bc');

		window.name = "kmcis_web_sample";
		function openKMCISWindow() {
			var KMCIS_window = window.open('', 'KMCISWindow', 'width=425, height=550, resizable=0, scrollbars=no, status=0, titlebar=0, toolbar=0, left=435, top=250');
			if (KMCIS_window == null) {
				alert(" ※ 윈도우 XP SP2 또는 인터넷 익스플로러 7 사용자일 경우에는 \n    화면 상단에 있는 팝업 차단 알림줄을 클릭하여 팝업을 허용해 주시기 바랍니다. \n\n※ MSN,야후,구글 팝업 차단 툴바가 설치된 경우 팝업허용을 해주시기 바랍니다.");

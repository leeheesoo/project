    <script src="~/Content/js/Nilririmanbo/dev.js"></script>
    <script type="text/javascript">
        var googleAnalyticCategory = '@ViewBag.Title';
        var eventOpen = '@ViewBag.IsOpen';
        var eventClose = '@ViewBag.IsClose';
    </script>
}



@model INGLife.Event.Models.AdminModels.AdminUserCreateModel
@{
    ViewBag.Title = "Settings > 계정관리 > 등록";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="">
            <div class="panel-heading">
                <h4></h4>
            </div>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { })) {
                <div class="panel-body">
                    <div class="table-responsive">
                                <div class="table-responsive">
                            <table class="table table-bordered" id="" style="width:100%">    
                                <tr>
                                    <th class="text-center" style="vertical-align:middle; width:80px">아이디</th><td>@(Html.TextBoxFor(m=>m.UserName ,new{@class = "form-control"})) </td>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">비밀번호</th><td>@(Html.PasswordFor(m=>m.Password ,new{@class = "form-control"})) </td>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">역할</th>
                                    <td>
                                        @foreach (var role in Model.Roles) {
                                            <label>
                                                <input type="checkbox" value="@role.Name" name="SelectRoles" />
                                                @role.Name
                                            </label>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="text-right">                        
                        <button type="submit" class="btn btn-primary">저장</button>
                        <a href='@Url.Action("Index")' class="btn btn-primary">취소</a>
                        </div>
                    </div>
                </div>
            }
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            if ('@TempData["message"]' != '') {
                alert('@TempData["message"]');
            }
        });
    </script>
}
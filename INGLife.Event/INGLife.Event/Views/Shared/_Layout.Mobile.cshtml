@{
	var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
	var action = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    @RenderSection("metas", required: false)
    <meta name="viewport" content="width=@(ViewBag.ViewPortWidth == null ? 640 : ViewBag.ViewPortWidth), user-scalable=no, target-densitydpi=device-dpi" />	
	<link href="~/Content/reset.css" rel="stylesheet" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@RenderSection("styles", required: false)
    
	<!-- Google Analytics -->
	<script>
		(function (i, s, o, g, r, a, m) {
			i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
				(i[r].q = i[r].q || []).push(arguments)
			}, i[r].l = 1 * new Date(); a = s.createElement(o),
			m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
		})(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

		ga('create', '@System.Configuration.ConfigurationManager.AppSettings["google.analytics.code"]', 'auto');
		ga('send', 'pageview');
	</script>
	<!-- End Google Analytics -->
</head>
<body>
	@RenderBody()

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryform")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/jqueryunobtrusive")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
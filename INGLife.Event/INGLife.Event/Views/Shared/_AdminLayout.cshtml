@using INGLife.Event.Infrastructures.Admin
@{ 

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1000, user-scalable=no, target-densitydpi=device-dpi">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome = 1">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/admincss")
    <!-- MetisMenu CSS -->
    <link href="~/Content/metisMenu.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/sb-admin-2.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body style="padding-top:0">
    <!-- #wrapper -->
    <div id="wrapper">
        <!-- Navigation start -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin:0;">
            <!-- 좌측 상단 페이지명 start -->
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","AdminHome")">오렌지라이프생명 관리자</a>
            </div>
            <!-- 좌측 상단 페이지명 end -->
            <!-- 우측 상단 아이콘 영역 start -->
            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown" style="@(User.IsInAnyRole("Administrators") ? "" : "display:none")">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-gear fa-fw"></i> Settings <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="@Url.Action("Index","AdminUserManage")"><i class="fa fa-user-circle-o fa-fw"></i> 시스템 계정 관리</a></li>
                        <li><a href="@Url.Action("Index","AdminRoleManage")"><i class="fa fa-road fa-fw"></i> 시스템 역할 관리</a></li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="@Url.Action("Logout","AdminHome")"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- 우측 상단 아이콘 영역 end -->
            <!-- 좌측 side 메뉴 여역 start -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        @Html.Partial("_AdminNavigator")
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- 좌측 side 메뉴 여역 end -->
        </nav>
        <!-- Navigation end -->
        <!-- body 영역 start-->
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                @RenderBody()
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- body 영역 end -->

    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryform")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/jqueryunobtrusive")
    <!-- Bootstrap Core JavaScript -->
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/adminjs")
    @Scripts.Render("~/bundles/vuejs")
    @Scripts.Render("~/bundles/momentjs")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $.validator.setDefaults({
            onkeyup: false,
            onclick: false,
            onfocusout: false,
            showErrors: function (errorMap, errorList) {
                if (this.numberOfInvalids() && errorList != '') { // 에러가 있을 때만..
                    alert(errorList[0].message);
                    $(errorList[0].element).focus();
                }
            }
        });
        $(function () {
            $.fn.datepicker.defaults.format = "yyyy-mm-dd";
            $.fn.datepicker.defaults.language = 'kr';
            $('.datepicker').datepicker();
        });
    </script>
</body>

</html>